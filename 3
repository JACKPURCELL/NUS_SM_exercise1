let check = 0
let show1 = 0
let show = 0
let time = 0

while (true) {
    if (input.buttonIsPressed(Button.AB)) {
        basic.showString("C")
        show = 0
        time = 0
        show1 = 0
        check = 0
    } else if (input.buttonIsPressed(Button.A) && check == 0) {
        time = input.runningTime()
        basic.showString("S")
    } else if (input.buttonIsPressed(Button.B)) {
        show = input.runningTime() - time + show
        show1 = Math.floor(show / 1000)
        basic.showNumber(show1)
        check = 1
    } else if (input.buttonIsPressed(Button.A) && check == 1) {
        basic.showString("T")
        time = input.runningTime()
    } else if (input.buttonIsPressed(Button.AB)) {
        basic.showString("C")
        show = 0
        time = 0
        show1 = 0
        check = 3
    }
}
